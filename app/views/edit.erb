<form action="/recipes/<%= @recipe.id %>" method="POST">
  <!-- <input id="hidden" type="hidden" name="_method" value="patch"> -->
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Recipe Name: </label>
  <input type="text" name="recipe[name]" id='name' value="<%= @recipe.name %>">
  <br/>
  <label>Recipe Ingredients: </label>
  <input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>">
  <br/>
  <label>Recipe Cook Time: </label>
  <input type="text" name="recipe[cook_time]" id="cook_time" value="<%= @recipe.cook_time %>">
  <input type="submit" value="submit" id="submit">
</form>
